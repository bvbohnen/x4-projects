<?xml version="1.0" encoding="UTF-8"?>
<addon name="sn_mod_support_apis" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../core/coreaddon.xsd">
  <environment type="menus">
    <!--Load this first, so it sets up the extra global functions.-->
    <file name="ui/lua_loader.lua" />

    <!--Set up generic lua files for others to reference.-->
    <file name="ui/text.lua" />
    <file name="ui/library.lua" />

    <file name="ui/userdata/interface.lua" />
    
    <file name="ui/time/interface.lua" />

    <file name="ui/c_library/winpipe.lua" />

    <file name="ui/named_pipes/library.lua" />
    <file name="ui/named_pipes/pipes.lua" />
    <file name="ui/named_pipes/interface.lua" />

    <file name="ui/time/pipe_time.lua" />

    <file name="ui/interact_menu/interface.lua" />
    <file name="ui/chat_window/interface.lua" />

    <!--Load this late, so others can reset and decide if they want to add menus.-->
    <file name="ui/simple_menu/library.lua" />
    <file name="ui/simple_menu/tables.lua" />
    <file name="ui/simple_menu/standalone_menu.lua" />
    <file name="ui/simple_menu/options_menu.lua" />
    <file name="ui/simple_menu/interface.lua" />

    <!--References simple menu tables.-->
    <file name="ui/hotkey/interface.lua" />

    <!--Load this last, since it imports from others.-->
    <file name="ui/external_interface.lua" />
    
    <savedvariable name="__MOD_USERDATA" storage="userdata" />

    <!--Dependencies on egosoft menus-->
    <dependency name="ego_chatwindow" />
    <dependency name="ego_detailmonitor" />
    <dependency name="ego_gameoptions" />
    <dependency name="ego_interactmenu" />
    <dependency name="ego_targetmonitor" />
  </environment>
</addon>
